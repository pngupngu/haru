{
  "compilerOptions": {
    "module": "es6",
    "target": "es6",
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": false,
    "removeComments": true,
    "experimentalDecorators": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "preserveConstEnums": true,
    "lib": ["dom", "es6", "es2017.sharedmemory"],
    "outDir": ".",
    "sourceMap": true,
  },
  "exclude": [
    "./**/node_modules"
  ],
  "include": [
    "./src/**/*.ts"
  ]
}